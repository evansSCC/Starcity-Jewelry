@using ASPGroupProject.Models

@{
    ViewBag.Title = "Home Page";
    var StuffList = ViewBag.message;
}



<div class="row">
    <div class="col-md-6">
        <h3>About Us</h3>
        <p>Not sure what we will put here yet. TBD.</p>
    </div>
    <div class="col-md-6 ">
        <h3>News</h3>
        <p>
            Welcome to the new Star City Originals website. We just hit the web recently, and we are excited to share our products with the world.
            To find out more information about our company please visit the contact us page.
        </p>
    </div>
    <div class="card-columns">
        @foreach (var product in StuffList)
        {
        <div class="card border-primary mb-5">
            <img class="card-img-top thumbnail-small" src="..@(product.Image)_Main.jpg" />
            <div class="card-header">@product.Name</div>
        </div>
        }
        </div>
    </div>
   