@using ASPGroupProject.Models
@model ASPGroupProject.Models.Product
@{
    ViewBag.Title = "Product_View";
}

<h1>@Model.Name</h1>
<img class="card-img-top product-thumbnail" src="@(Model.Image)_Main.jpg" />
<br />
<br />
<h2>Description</h2>
<p>@Model.Description</p>

<h3>Price - @Model.Price.ToString("c")</h3>

@using (Html.BeginForm("add_to_cart", "Home"))
{
    <div class="form-group">
        <input type="hidden" name="id" value="@Model.Id" />
        <input type="submit" class="btn btn-primary" value="Buy"/>
    </div>
}
